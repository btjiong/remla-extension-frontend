{
    "name": "Stack Overflow tag classifier",
    "description": "This extension predicts the tags for a Stack Overflow post when visiting Stack Overflow.",
    "version": "0.0.1",
    "manifest_version": 3,
    "background": {
        "scripts": ["./background.js"]
    },
    "options_page": "./options.html",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs"
    ],
    "host_permissions": [
        "*://stackoverflow.com/questions/*/",
        "*://so-classifier.herokuapp.com/*",
        "http://127.0.0.1/*"
      ]
}
